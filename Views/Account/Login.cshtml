@model AutoParts.Models.ViewModels.LoginModel
    <div class="product-list" style="display:inline-block;border-radius: 15px; ">
        <h2>Вход на сайт</h2>

        <a asp-action="Register" asp-controller="Account">Регистрация</a>

        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group" style="display:inline-block;border-radius: 15px; ">
                    <label asp-for="Login">Введите Логин</label>
                    <input type="text" asp-for="Login" />
                    <span asp-validation-for="Login" />
                </div>
                <div class="form-group">
                    <label asp-for="Pass">Введите пароль</label>
                    <input asp-for="Pass" />
                    <span asp-validation-for="Pass" />
                </div>
                <div class="form-group">
                    <input style="position: relative;left: 50%; transform: translate(-50%, 0); " type="submit" value="Войти" class="btn btn btn-outline-primary" />
                </div>
            </div>
        </form>
    </div>

@{
    @model IEnumerable<AutoParts.Models.ProductsInBagViewModel>;
    ViewData["Title"] = "Корзина";
}
<h2>Корзина (@ViewBag.ResultPrice $)</h2>

@foreach (var item in Model)
{
    <div class="product-list" style="display:inline-block;border-radius: 15px; ">
    <h4>@item.Name x @item.Amount</h4>    
    <img style="width: 25%; padding-bottom: 10px;" src="@Url.Content(item.Image)" alt="@item.Name" />

    <a asp-area="" asp-route-id="@item.Id" asp-controller="Clients" asp-action="RemoveFromBag">
        <input value="Вернуть" type="button" class="btn btn-dark" />
    </a>
    <a asp-area="" asp-route-id="@item.ProductId" asp-controller="Clients" asp-action="Buy">
        <input value="Оформить заказ" type="button" class="btn btn-dark" />
    </a>
        </div>
        <hr>
}